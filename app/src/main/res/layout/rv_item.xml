<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchHerbalActivity">

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:contentPaddingLeft="12dp"
        app:contentPaddingRight="12dp"
        app:contentPaddingBottom="24dp"
        app:contentPaddingTop="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                android:layout_width="0dp"
                android:layout_weight="3">

                <com.lorma.hilinggaling.utils.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/image"
                    android:src="@drawable/lagundi_image" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:padding="4dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerInParent="true"
                    android:text="Lagundi"
                    android:gravity="center"
                    android:id="@+id/plant_name"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@+id/plant_name"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/other_name"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:text="Chinese chastetree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>